# ========================================
# Iyaya Backend Configuration (EXAMPLE)
# ========================================
# Copy to .env and set your actual values
# WARNING: Never commit .env to version control!

# ======================
# Server Configuration
# ======================
PORT=5000
NODE_ENV=development

# ======================
# Database Configuration
# ======================
# Local Development
MONGODB_URI=mongodb://localhost:27017/iyaya

# MongoDB Atlas (Production)
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/iyaya?retryWrites=true&w=majority

# ======================
# Authentication
# ======================
JWT_SECRET=your_64_char_hex_string_here
JWT_REFRESH_SECRET=another_64_char_hex_string_here
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# ======================
# Security
# ======================
# Development
CORS_ORIGIN=http://localhost:3000

# Production (Uncomment when deploying)
# CORS_ORIGIN=https://yourdomain.com
# RATE_LIMIT_WINDOW=15
# RATE_LIMIT_MAX=100
# HTTPS_ENABLED=true
# CSRF_PROTECTION=true

# ======================
# Email Service
# ======================
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_FROM=no-reply@iyaya.com

# ======================
# Geocoder Configuration
# ======================
GEOCODER_PROVIDER=mapquest
GEOCODER_API_KEY=your_mapquest_api_key_here
GEOCODER_CACHE_TTL=86400