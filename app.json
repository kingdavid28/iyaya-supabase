{
  "expo": {
    "name": "iYaya - Childcare Made Easy",
    "slug": "iyaya-childcare",
    "scheme": "iyaya",
    "icon": "./assets/icon.png",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "description": "Connect with trusted caregivers and find quality childcare services in your area.",
    "keywords": ["childcare", "nanny", "babysitter", "caregiver", "family", "kids"],
    "privacy": "public",
    "platforms": ["ios", "android", "web"],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#C2185B"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.iyaya.childcare",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take profile photos and upload payment confirmations.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to select profile photos and payment confirmations.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice messages in chat.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to help you find nearby caregivers."
      },
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "contain",
        "backgroundColor": "#C2185B"
      }
    },
    "android": {
      "package": "com.iyaya.childcare",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#C2185B"
      },
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "contain",
        "backgroundColor": "#C2185B"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "resize"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "name": "iYaya - Childcare Made Easy",
      "shortName": "iYaya",
      "description": "Connect with trusted caregivers and find quality childcare services in your area.",
      "themeColor": "#C2185B",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-secure-store",
      "expo-web-browser",
      "expo-image-picker",
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#C2185B"
        }
      ],
      "expo-document-picker",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to location for caregiver profile setup and job matching."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "owner": "your-expo-username"
  }
}